<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="defaultTemplate" template="/WEB-INF/views/template/SiteTemplate.jsp">
        <put-attribute name="header" value="/WEB-INF/views/template/header.jsp"/>
        <put-attribute name="menu" value="/WEB-INF/views/template/menu.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/views/template/footer.jsp"/>
    </definition>

    <definition name="index" extends="defaultTemplate">
        <put-attribute name="body" value="/WEB-INF/views/index.jsp"/>
    </definition>

    <definition name="login" extends="defaultTemplate">
        <put-attribute name="body" value="/WEB-INF/views/login.jsp"/>
    </definition>

    <definition name="error" extends="defaultTemplate">
        <put-attribute name="body" value="/WEB-INF/views/error.jsp"/>
    </definition>

    <definition name="error404" extends="defaultTemplate">
        <put-attribute name="body" value="/WEB-INF/views/error404.jsp"/>
    </definition>

    <definition name="user/show" extends="defaultTemplate">
        <put-attribute name="body" value="/WEB-INF/views/user/show.jsp"/>
    </definition>

    <definition name="user/showAll" extends="defaultTemplate">
        <put-attribute name="body" value="/WEB-INF/views/user/showAll.jsp"/>
    </definition>
</tiles-definitions>